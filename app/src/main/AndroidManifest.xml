<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.twig.finalproject" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.example.twig.androidActivities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.twig.androidActivities.WelcomeActivity"
            android:label="Welcome Activity">
        </activity>

        <activity
            android:name="com.example.twig.androidActivities.LoginActivity"
            android:label="Login Activity">
            android:parentActivityName="com.example.twig.androidActivities.WelcomeActivity">
        </activity>

        <activity
            android:name="com.example.twig.androidActivities.ApplicationActivity"
            android:label="Application Activity">
        </activity>

        <activity
            android:name="com.example.twig.androidActivities.RegisterActivity"
            android:label="Register Activity">
        </activity>

        <activity
            android:name="com.example.twig.androidActivities.FriendListActivity"
            android:label="Friend List Activity">
        </activity>

        <activity
            android:name="com.example.twig.androidActivities.FriendSearchActivity"
            android:label="Friend Search Activity">
        </activity>

        <activity
            android:name="com.example.twig.androidActivities.FriendDetailActivity"
            android:label="Friend Detail Activity">
        </activity>

        <activity
            android:name="com.example.twig.androidActivities.InterestListActivity"
            android:label="Interest List Activity">
        </activity>

        <activity
            android:name="com.example.twig.androidActivities.RegisterInterestActivity"
            android:label="Register Interest Activity">
        </activity>

        <activity
            android:name="com.example.twig.androidActivities.SalesListActivity"
            android:label="Sales List Activity">
        </activity>

        <activity
            android:name="com.example.twig.androidActivities.SalesReportActivity"
            android:label="Sales Report Activity">
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBH9EO00wJ7OtnzKMFxFwEXPA-mUYA-e5w" />

        <activity
            android:name="com.example.twig.androidActivities.MapPlaceActivity"
            android:label="Map Place Activity" >
        </activity>

        <activity
            android:name="com.example.twig.androidActivities.MapViewActivity"
            android:label="Map View Activity" >
        </activity>

    </application>

</manifest>
